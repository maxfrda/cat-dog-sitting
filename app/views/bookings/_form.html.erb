<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, required: true %>
</div>

<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, required: true %>
</div>

<div class="text-field">
  <%= form.label :animal_name %>
  <%= form.text_field :animal_name, required: true %>
</div>

<div class="text-field">
  <%= form.label :animal_type %>
  <%= form.radio_button :animal_type, 'dog' %> 
  <%= form.label :animal_type, 'Dog', :value => 'dog' %>
  <%= form.radio_button :animal_type, 'cat' %>
  <%= form.label :animal_type, 'Cat', :value => 'cat' %>
</div>

<div class="text-field">
  <%= form.label :hours_requested %>
  <%= form.number_field :hours_requested, required: true, min: 2, max: 8 %>
</div>

<div class="date-field">
  <%= form.label :date_of_service %>
  <%= form.date_field :date_of_service, required: true, min: Date.today %>
</div>
